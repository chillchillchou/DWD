  <div class="flipbook-viewport">

    <div class="container">
      <div class="flipbook">

        <div id="content" style="background-image:url(pics/cover.png)"></div>
        <div id="preface" style="background-color: black;float: left;width: 461px;height: 600px;position: absolute;top: 0px;left: 0px;bottom: auto;right: auto;box-shadow: rgba(0, 0, 0, 0) 0px 0px 20px;display: block;padding: 30px;margin: auto;margin-right: 20px;">
